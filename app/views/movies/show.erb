  <% if flash.has?(:message) %>
      <%= flash[:message] %>
    <% end %>

  <h2><%=@movie.name.capitalize%> Review</h2>
    <br>
  <%time = Time.new%>
  <%values = time.to_a%>
  <p>Last Updated: <%=Time.utc(*values)%></p>
    <br>
  <span>Rating: <%=@movie.rating%><span>
    <br>
    <br>
  <span>Director: </span><%=@movie.director%>
    <br>
    <br>
  <span>Genres: </span><%= @movie.genres.collect {|genre| genre.name}.join(", ") %>
    <br>
    <br>
  <span>Review: </span><%=@movie.review%>
    <br>
    <br>

  <form method="post" action="/users/<%=@user.slug%>/movies/<%=@movie.id%>/delete">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>

    <br>
  <p><a href="/users/<%=@user.slug%>/movies/<%=@movie.slug%>/edit">Edit</a></p>
